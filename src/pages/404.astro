import NAV from './nav.astro';
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found | FiddleBops</title>
    <meta name="description" content="The page you are looking for could not be found. Please return to the homepage or check the URL.">
    <meta name="robots" content="noindex, nofollow"/>
    <link rel="stylesheet" href="/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
      .tab-content{background-color:#fcfcfc;padding:80px 30px;border-radius:15px;margin-bottom:20px}
      .page .title{color:#fff}
    </style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
  const navToggle = document.querySelector('.nav-toggle');
  const navMenu = document.querySelector('.nav-menu');

  navToggle.addEventListener('click', function() {
    navMenu.classList.toggle('active');
  });

});
</script>
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-9JME3P55QJ"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-9JME3P55QJ');
</script>
</head>
<body>
    <header>
        <div class="container">
            <div class="logo">
              <h1><a href="/">Fiddle<span class="light">Bops</span></a></h1>
            </div>
             <button class="nav-toggle" aria-label="Toggle Navigation">☰</button>
            <nav class="nav-menu">
                <ul>
                    <li><a href="/">Home</a></li>
                    <NAV />
                </ul>
            </nav>
      <select style="float:right;">
        <option data-lang="en" data-url="/">English</option>
        <option data-lang="zh-CN" data-url="/zh/">简体中文</option>  
        <option data-lang="es" data-url="/es/">Español</option>
        <option data-lang="fr" data-url="/fr/">Français</option>
        <option data-lang="de" data-url="/de/">Deutsch</option>
        <option data-lang="ja" data-url="/ja/">日本語</option>
        <option data-lang="ko" data-url="/ko/">한국어</option>
        </select>
        </div>
    </header>

    <main>
        <section class="error-404">
            <div class="container tab-content">
                <h2>404 - Page Not Found</h2>
                <p>The page you are looking for does not exist or has been moved. Please check the URL or return to the homepage.</p>
                <a href="/">Return to Homepage</a>
            </div>
        </section>
    </main>

    <footer>
      <div class="container">
           <nav>
               <ul>
                  <li><a href="/privacy/">Privacy Policy</a></li>
                  <li><a href="/terms-of-service/">Terms of service</a></li>
                </ul>
           </nav>
           <p class="copyright">© 2025 FiddleBops. All rights reserved.</p>
      </div>
    </footer>
  <script>
    function goToLink(event) {
      const select = event.target;
      const selectedOption = select.options[select.selectedIndex];
      const url = selectedOption.getAttribute('data-url');
      if (url) {
      window.location.href = url;
      }
    }
    
    // Add event listener
    document.addEventListener('DOMContentLoaded', () => {
      const select = document.querySelector('select');
      if (select) {
      select.addEventListener('change', goToLink);
      
      // Set current language
      const currentPath = window.location.pathname;
      const options = Array.from(select.options);
      const currentOption = options.find(option => 
        option.getAttribute('data-url') === currentPath
      );
      
      if (currentOption) {
        currentOption.selected = true;
      } else {
        // If it's the root path or no matching option is found, select English (default language)
        const defaultOption = options.find(option => 
        option.getAttribute('data-url') === '/'
        );
        if (defaultOption) {
        defaultOption.selected = true;
        }
      }
      }
    });
    </script>
</body>
</html>