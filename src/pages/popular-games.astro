---
// 重构的热门游戏组件
import GameList from '../components/GameList.astro';
import { popularGames } from '../data/games.ts';
import { getTranslation } from '../data/i18n.ts';

interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = (key: string) => getTranslation(lang, key);
---

<GameList 
  games={popularGames} 
  title={t('common.popularGames')} 
  className="game-iframe-pop"
  lang={lang}
/>