---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TrendingGames from '../trending-games.astro';
import NewGames from '../new-games.astro';
import PopularGames from '../popular-games.astro';

const title = "Fiddlebops - 免费在线Fiddlebops Incredibox游戏";
const description = "用 Fiddlebops 创建你独一无二的音乐！这是一个受 Incredibox 启发的粉丝自制项目，允许你混合搭配各种声音，创作个性化音乐。在 Fiddlebops 中，探索你的音乐天赋，分享你的独特音乐。";
const canonicalUrl = "https://www.playfiddlebops.com/zh/";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Game",
  "name": title,
  "alternateName": "playfiddlebops.com",
  "url": canonicalUrl,
  "description": description
};

const customStyles = `
.video-container {
    margin: 30px auto 0;
    border: 3px solid var(--tertiary-dark);
    border-radius: 4px;
    height:400px
}
.video-container iframe {
    width: 45%;
    height: 100%;
    float: left;
    margin:0 30px;
}
audio {width:210px}
.game-card .game-iframe-sprunki {
  float:left;
    width: 69%;
    margin:0;
    padding:0;
     height:600px;
     background-color:#fff;
     position: relative;
     background-image: linear-gradient(rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)), url(/tw.jpg);
     background-repeat: no-repeat;
     background-position: center center;
     background-size:cover;
}
.game .game-l-2 img {
    width: 100%!important;
    height:auto;
    margin: 0 auto;
}
@media screen and (max-width: 980px){
    .game-card .game-iframe-sprunki {
        width:100%;
    }
}
@media screen and (max-width: 768px){
    audio {width: 120px}
    .game-card .game-iframe-sprunki {
        height:330px!important;
    }
    .video-container {
        height:300px
    }
    .video-container iframe {
        width: 94%;
        height: 100%;
        padding: 0px;
        margin: 20px;
    }
    .game-info{display:none}
    footer .container{display:block}
}
`;

const customScripts = `
<script>
let iframeLoaded = false;
const iframe = document.getElementById("Fiddlebops-iframe");
const playButton = document.getElementById("playButton");

function loadIframe() {
    iframe.src = "https://fiddlebops.netlify.app/";
    playButton.style.display = "none";
    iframeLoaded = true;
    iframe.focus();
}

document.addEventListener('DOMContentLoaded', function() {
    if (playButton) {
        playButton.addEventListener("click", loadIframe);
    }
});
</script>
`;
---

<BaseLayout
  title={title}
  description={description}
  lang="zh-CN"
  canonicalUrl={canonicalUrl}
  jsonLd={jsonLd}
  customStyles={customStyles}
  customScripts={customScripts}
  twitterTitle={title}
  twitterDescription={description}
  ogTitle={title}
  ogDescription={description}
  ogUrl="https://www.playfiddlebops.com"
